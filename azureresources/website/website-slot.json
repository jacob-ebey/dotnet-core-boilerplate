{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApplicationName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The name of the application."
      }
    },
    "Environment": {
      "type": "string",
      "metadata": {
        "description": "The name of the environment."
      }
    },
    "SlotName": {
      "type": "string",
      "defaultValue": "staging",
      "metadata": {
        "description": "The name of the deployment slot."
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "westus2",
      "metadata": {
        "description": "The location of the resource."
      }
    },
    "SkuName": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "NumberOfWorkers": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of Workers for web server farm"
      }
    }
  },
  "variables": {
    "Environment": "[toLower(parameters('Environment'))]",
    "ApplicationId": "[resourceId('Microsoft.Web/sites', variables('WebAppName'))]",
    "WebAppName": "[toLower(concat(parameters('ApplicationName'),'-', variables('Environment'),'-', parameters('Location')))]",
    "AppServicePlanName": "[toLower(concat(parameters('ApplicationName'),'-', variables('Environment'),'-plan'))]",
    "AppServicePlanId": "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
    "InsightsName": "[toLower(concat(parameters('ApplicationName'), '-', variables('Environment'), '-insights'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "WebsiteTemplate",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'KeyVaultTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/jacob-ebey/dotnet-core-boilerplate/master/azureresources/website/website.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApplicationName": {
            "value": "[parameters('ApplicationName')]"
          },
          "Environment": {
            "value": "[parameters('Environment')]"
          },
          "Location": {
            "value": "[parameters('Location')]"
          },
          "SkuName": {
            "value": "[parameters('SkuName')]"
          },
          "NumberOfWorkers": {
            "value": "[parameters('NumberOfWorkers')]"
          },
          "KeyVaultName": {
            "value": "[variables('KeyVaultName')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('WebAppName'), '/', 'staging')]",
      "kind": "app",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[variables('AppServicePlanId')]",
        "siteConfig": {
          "ipSecurityRestrictions": "[parameters('IpSecurityRestrictions')]"
        }
      },
      "dependsOn": [
        "[variables('AppServiceId')]"
      ]
    }
  ],
  "outputs": "[reference(resourceId('Microsoft.Resources/deployments', 'WebsiteTemplate').outputs]"
}
