{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApplicationName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "The name of the application."
      }
    },
    "Environment": {
      "type": "string",
      "metadata": {
        "description": "Environment type"
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "westus2",
      "metadata": {
        "description": "The location of the resource."
      }
    },
    "KeyVaultName": {
      "type": "string",
      "defaultValue": null,
      "metadata": {
        "description": "The name of the key vault."
      }
    }
  },
  "variables": {
    "DbName": "[toLower(concat(parameters('ApplicationName'), '-cosmos-mongo-', parameters('Environment')))]"
  },
  "resources": [
    {
      "apiVersion": "2015-04-08",
      "kind": "MongoDB",
      "type": "Microsoft.DocumentDb/databaseAccounts",
      "name": "[variables('DbName')]",
      "location": "[parameters('Location')]",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "locations": [
          {
            "id": "[variables('DbName')]",
            "failoverPriority": 0,
            "locationName": "[parameters('Location')]"
          }
        ],
        "enableMultipleWriteLocations": false,
        "isVirtualNetworkFilterEnabled": false,
        "virtualNetworkRules": [],
        "ipRangeFilter": "",
        "dependsOn": []
      },
      "tags": {
        "ApplicationName": "[parameters('ApplicationName')]",
        "Environment": "[parameters('Environment')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(parameters('KeyVaultName'), '/MongoDb--Connection')]",
      "apiVersion": "2018-02-14",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDb/databaseAccounts', variables('DbName'))]"
      ],
      "properties": {
        "contentType": "text/plain",
        "value": "[concat('AccountEndpoint=https://', variables('DbName'), '.documents.azure.com:443/;AccountKey=', listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('DbName')), '2015-04-08').primaryMasterKey, ';')]"
      }
    }
  ]
}
